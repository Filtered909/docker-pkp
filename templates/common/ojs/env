HTTPS="on"
WEB_PATH="/var/www/html"

# Database:
# MYSQL_VERSION=10.3
MYSQL_ROOT_PASSWORD=root
MYSQL_USER=ojs
MYSQL_PASSWORD=ojsPwd
MYSQL_DATABASE=ojs

# PKP Tool:
PKP_TOOL="ojs"
